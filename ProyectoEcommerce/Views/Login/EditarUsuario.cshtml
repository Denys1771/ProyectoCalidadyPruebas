@model ProyectoEcommerce.Models.Entidades.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-primary text-white">
                <h4>Editar Usuario</h4>
            </div>
            <div class="card-body">
                <form asp-action="EditarUsuario" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="URLFoto" />

                    <div class="form-group">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre" autocomplete="off" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label for="PhoneNumber" class="form-label">Teléfono</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Teléfono" autocomplete="off" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label for="URLFoto" class="form-label">Foto de Perfil</label>
                        <input type="file" class="form-control" name="Imagen">
                        <span asp-validation-for="URLFoto" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Guardar" class="btn btn-success btn-sm px-4" />
                        <a asp-action="CambiarPassword" class="btn btn-primary btn-sm ms-2 px-4">Cambiar Contraseña</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4 d-flex justify-content-center align-items-center">
        <img src="@Model.URLFoto" class="img-fluid rounded-circle shadow" style="width: 200px; height: 200px;" />
    </div>
</div>
